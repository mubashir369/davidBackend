
<% layout('dashboard.ejs') -%>

<%- include ../../dashboard/partials/header.ejs %>

<div class="page px-2 px-s-0 bg-white common-form common-form-border ">
            
             <!-- --------------Price ------------- -->
             <div class="">
                <!-- <div class=" p-0">
                    <h4 class="text-weight-700 mb-1">Service</h4>
                    <div class="divider mb-2 p-0"></div>
                </div> -->
                <div class="table" app-init="get('salon','54855602')">

                <div class="row table-header text-left">

                    <div class="cell middle mobile-cell pl-1" style="width:15rem;">Name</div>
                    
                    <div class="cell mobile-cell pl-1 text-right">Action</div>

                </div>
                <% if (salon.categories.length> 0) { %>
                <% salon.categories.forEach(function(category,key){ %>
                <div class="row" >

                    <div class="cell middle clickable text-bold mobile-cell"><%-category.name%></div>
                   
                    <div class="cell middle action-icons" app-attr="{id:'cell-'+category._id}">

                        
                        <div>
                            <a href="<%-'/dashboard/salon/edit_service_cms/'+category._id+'/'+category.name%>" class="link">
                                <span class="icon black edit left"></span>
                                
                            </a>
                            
                        </div>

                    </div>

                </div>

                <% }); %>
                                <% } else {%>
                                    <div>
                                        <h3>No Category found!!</h3>
                                    </div>
                                    <% }; %>

            </div>
            </div>

            <div class="list-item-wrap serviceDropdown pt-0" id="serviceDropdown">
                <div class="text-small">
                    <div class="grid col-12 text-white gap-1 py-1">
                        <div class="cell middle colspan-2">
                            <!-- <div class="bg-white box-shadow p-1 radius-10 border"> -->
                                <div class="text-black">Header Image</div>
                                <label for="HeaderImg" class="clickable mt-1">   
                                    <img src="/images/products/upload.svg" app-src="HeaderImg.img" class="object-fit">
                                </label>
                                <input type="file" app-model="HeaderImg.img" id="HeaderImg" class="app-hidden">
                            <!-- </div> -->
                        </div>
                        <div class="cell middle colspan-10">
                            <div class="grid col-12 row gap-1">
                                <div class="cell middle colspan-12">
                                    <h4 class="text-weight-700 text-black mb-1">Heading 1</h4>
                                    <div class="divider  p-0"></div>
                                </div>
                                <div class="cell middle colspan-6">
                                    <div class="text-black">Heading  </div>
                                    <input type="text" placeholder="Heading">
                                </div>
                                <div class="cell middle colspan-6">
                                        <div class="text-black">Description </div>
                                        <textarea  app-model="itemHomeSlider.split_percent" placeholder="Description" class="text-left"></textarea>
                                </div>
                            </div>
                            <div class="grid col-12 row gap-1">
                                <div class="cell middle colspan-12">
                                    <h4 class="text-weight-700 text-black mb-1">Heading 2</h4>
                                    <div class="divider  p-0"></div>
                                </div>
                                <div class="cell middle colspan-6">
                                    <div class="text-black">Heading  </div>
                                    <input type="text" placeholder="Heading">
                                </div>
                                <div class="cell middle colspan-6">
                                        <div class="text-black">Description </div>
                                        <textarea  app-model="itemHomeSlider.split_percent" placeholder="Description" class="text-left"></textarea>
                                </div>
                            </div>
                        </div>
                        
                        <div class="colspan-12">
                            <div class="divider mb-2 p-0"></div>
                        </div>
                        <!-- <div class="cell middle colspan-12"> <div class="divider"></div> </div> -->
                        <div class="cell middle colspan-12">
                            <div class="p-0">
                                <h4 class="text-weight-700 text-black mb-1">Other Heading</h4>
                                <div class="divider mb-2 p-0"></div>
                            </div>
                            <div class="grid col-12 text-white gap-1 py-1">
                                <div class="cell middle colspan-2">
                                    <label for="OtherHeading" class="clickable">   
                                        <img src="/images/products/upload.svg" app-src="OtherHeading.img" class="object-fit">
                                    </label>
                                    <input type="file" app-model="OtherHeading.img" id="OtherHeading" class="app-hidden">
                                </div>
                                <div class="cell middle colspan-4">
                                    <input type="text" app-model="itemHomeSlider.name" placeholder="Other Heading" class="">
                                </div>
                                <div class="cell middle colspan-6">
                                    <textarea  app-model="itemHomeSlider.split_percent" placeholder="Description" class="text-left"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

               
                
                <!-- --------------Price ------------- -->
                <div class="bg-white box-shadow p-2 radius-10 border">
                    <div class=" p-0">
                        <h4 class="text-weight-700 mb-1">Price</h4>
                        <div class="divider mb-2 p-0"></div>
                    </div>
                    <div class="list-item-wrap">
                        <div class="grid col-12 table-header text-white row py-1">
                            <div class="cell middle colspan-4 pl-1">
                                <div>Service Name </div>
                            </div>
                            <div class="cell middle colspan-2 "><div>Senior Stylist Price</div></div>
                            <div class="cell middle colspan-2 "><div>Executive Stylist Price</div></div>
                            <div class="cell middle colspan-2  "><div>David Rozman Price</div></div>
                        </div>
                        <div class="divider mb-1"></div>

                        <div app-for="price_items in new.homeSlider_items" class="grid gap-1 col-12 mb-1 addPlusCard">
                            <div class="text-bold colspan-4">
                                <input type="text" app-model="price_items.name" placeholder="Service Name" class="">
                            </div>
                            <div class="colspan-2">
                                <input type="text" app-model="senior_price_items.price" placeholder="0.00" class="">
                            </div>
                            <div class="colspan-2">
                                <input type="text" app-model="executive_price_items.price" placeholder="0.00" class="">
                            </div>
                            <div class="colspan-2">
                                <input type="text" app-model="david_price_items.price" placeholder="0.00" class="">
                            </div>
                            <div class="colspan-2 text-center flex flex-middle-right">
                                <a class="" app-click="price_itemsBtn('remove',{{index}})"><span class="icon close black right"></span></a>
                            </div>


                            <div class="divider mb-1 colspan-12"></div>
                        </div>
                    </div>
                    <div class="text-left my-1">
                        <button class="dp-btn bg-primary" app-click="price_itemsBtn()">Add Service and Price<span class="icon add white right"></span></button>
                    </div>
                </div>



            </div>

            <div class="mb-50"></div>
 
</div>


