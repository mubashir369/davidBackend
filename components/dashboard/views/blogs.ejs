
<% layout('dashboard.ejs') -%>

<%- include ../../dashboard/partials/header.ejs %>

<div class="page px-2 px-s-0 bg-white common-form common-form-border ">
    
        <div class="list-item-wrap">
            <div class="text-small">

                <div class="grid col-8 table-header text-white row py-1">

                    <div class="cell middle colspan-1 pl-1">
                        <div>Blog Image</div>
                    </div>
                    <div class="cell middle colspan-1 text-center"><div>Category</div></div>
                    <div class="cell middle colspan-1 text-center colspan-1"><div>Blog Heading</div></div>
                    <div class="cell middle colspan-4 text-center colspan-3"><div>Blog Description</div></div>
                    <div class="colspan-1"></div>

                </div>
                <div class="divider mb-1"></div>
            </div>
            <div class="list-item-wrap">
                <div app-for="item in new.service_items" class="grid gap-1 col-8 mb-1 ">
                    <div class="text-bold colspan-1">
                        <label for="new_image" class="clickable d-inline-block">   
                            <img src="/images/products/upload.svg" app-src="item.duration" class="object-fit">
                        </label>
                        <input type="file" app-model="item.duration" id="new_image" class="app-hidden">
                        <!-- <input type="text" app-model="item.duration" placeholder="mins" class="text-left "> -->
                    </div>
                    <div class="text-bold colspan-1">
                        <input type="text" app-model="item.name" placeholder="Category" class="">
                    </div>
                    <div class="text-bold colspan-1">
                        <input type="text" app-model="item.name" placeholder="Blog Heading" class="">
                    </div>

                    <div class="text-bold colspan-4">
                        <textarea  app-model="item.split_percent" placeholder="Blog Description" class="text-left"></textarea>
                    </div>

                    <div class="text-right flex flex-middle-right">
                        <a class="" app-click="newServiceItem('remove',{{index}})"><span class="icon close black right"></span></a>
                    </div>
                    <div class="divider mb-1 colspan-7"></div>
                </div>
            </div>
            <div class="text-left my-1">
                <button class="dp-btn bg-primary" app-click="newServiceItem()">Add Task<span class="icon add white right"></span></button>
            </div>

        </div>
        <div class="mb-50"></div>
</div>

