                <div class="text-right pt-1">
                    <a class="btn border w-100" onclick="modalCloseAll()">
                        Close
                    </a>
                </div>

                <div class="text-right pt-1">
                    <a class="btn bg-secondary w-100" app-click="addNewEvent('memo')">
                        Save
                    </a>
                </div>
            </div>

        </div>

