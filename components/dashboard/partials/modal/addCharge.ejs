<div class="modal" id="addCharge" app-show="view.modal == 'addCharge'" anim="{'enter':'fade-in'}">

    <div class="modal-body" anim="{'enter':'move-up','duration':'0.2'}">

        <div class="grid col-2 pb-1">
            <div>
                <h4 class="text-light">
                    Delete Appointment?
                </h4>
            </div>
            <div class="text-right">
                <h4 class="close-icon text-light clickable" onclick="modalCloseAll()">&times;</h4>
            </div>
        </div>

        <div class="grid col-2 gap-1">
            <div class="text-right pt-1">
                <a class="btn border w-100" onclick="modalCloseAll()">
                    Cancel
                </a>
            </div>

            <div class="text-right pt-1">
                <a class="btn bg-secondary w-100" app-click="delete('appointments',new._key)">
                    Delete
                    <span class="icon delete white right"></span>
                </a>
            </div>

            <div class="colspan-2 text-right pt-1" app-show="view.linked_appts_show">
                <a class="btn bg-secondary w-100" app-click="updateAppointment('delete_linked',new._key)">
                    Delete Linked
                    <span class="icon delete white right"></span>
                </a>
            </div>
        </div>


    </div>

</div>
