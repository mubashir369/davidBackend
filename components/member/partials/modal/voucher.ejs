
    <div class="modal expanded" app-show="view.modal == 'show_edit'" anim="{'enter':'fade-in'}">

        <div class="modal-body" anim="{'enter':'move-up','duration':'0.2'}">

            <div class="grid col-2 pb-1">
                <div>
                    <h4 class="text-light">
                        <span app-show="new._key">Edit Voucher</span>
                        <span app-hide="new._key">Add New Voucher</span>
                    </h4>
                </div>
                <div class="text-right">
                    <h4 class="close-icon clickable" onclick="modalCloseAll()">&times;</h4>
                </div>
            </div>

            <div class="grid pb-1 gap-1 col-2">

                <div>
                    <label class="block text-small">Barcode</label>
                    <input type="text" app-model="new.barcode" placeholder="Barcode">
                </div>

                <div>
                    <label class="block text-small">Value</label>
                    <div class="flex">
                        <div class="flex flex-middle mr-05">Â£</div>
                        <input type="text" app-model="new.value" placeholder="Eg. 10">
                    </div>
                </div>

                <div class="">
                    <p class="mb-2 clickable" app-click="view.datepicker_simple = 'select'"><span>Start Date</span>: <span app-show="new.start_date" app-bind="parseISODate(new.start_date,'ddd Do MMM YYYY')"></span> <img src="/icons/down-arrow.svg" class="icon"></p>
                    <div class="layer-5 w-100 relative">
                        <%- include(view.basedir+'/components/dashboard/partials/date-picker-simple.ejs',{open:true, type:'select',obj:'new.start_date'}) %>
                    </div>
                </div>

                <div class="">
                    <p class="mb-2 clickable" app-click="view.datepicker_simple = 'select_expiry'"><span>Expiration Date</span>: <span app-show="new.expiry_date" app-bind="parseISODate(new.expiry_date,'ddd Do MMM YYYY')"> <img src="/icons/down-arrow.svg" class="icon"></p>
                    <div class="layer-5 w-100 relative">
                        <%- include(view.basedir+'/components/dashboard/partials/date-picker-simple.ejs',{open:true, type:'select_expiry',obj:'new.expiry_date'}) %>
                    </div>
                </div>

            </div>





            <div class="colspan-2 text-right">
                <a class="btn bg-secondary" app-click="post('vouchers',new)">Save Voucher <span class="icon add white right"></span></a>
            </div>


        </div>

    </div>
