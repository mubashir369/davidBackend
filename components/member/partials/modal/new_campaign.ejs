
    <div class="modal" app-show="view.modal == 'show_edit'" anim="{'enter':'fade-in'}">

        <div class="modal-body p-0 w-80 w-m-90" anim="{'enter':'move-up','duration':'0.2'}">

            <div class="modal-header text-primary">
                <div class="title">
                    <p class="m-0" app-bind="new.name" app-show="new.name"></p>
                    <p class="m-0" app-hide="new.name">Add New Campaign</p>
                </div>
                <div class="close">
                    <div class="btn-wrap">
                        <button class="btn btn-left border mr-1 text-primary" app-click="view.tab = 'one'" app-class="{'active':view.tab == 'one'}">Details<span class="icon reminder black right"></span></button>
                        <button class="btn btn-mid border text-primary" app-click="view.tab = 'two'" app-class="{'active':view.tab == 'two'}">Content<span class="icon edit black right"></span></button>
                    </div>
                </div>
            </div>

            <div class="modal-content p-2" style="height: 80vh">

                <div class="grid pb-1 gap-2 col-4" app-show="view.tab == 'one'">

                    <div class="mb-1 colspan-2">
                        <label class="block text-small">Name</label>
                        <input type="text" app-model="new.name" placeholder="Campaign Name" class="rounded">
                    </div>

                    <div class="colspan-2 mb-1">
                        <label class="block text-small">Select Clients</label>
                        <select app-model="new.query" app-change="getRecipients(new.query)" class="rounded">
                            <option value="false" disabled>Please select</option>
                            <option value="allClients">All Clients</option>
                            <option value="birthdaysThisMonth">Has a birthday this month</option>
                            <option value="birthdaysNextMonth">Has a birthday next month</option>
                            <option value="transactionsOver|6">Clients who haven't been for 6 months</option>
                        </select>
                    </div>

                    <div class="colspan-4 rowspan-1">
                        <label class="block text-small">Description</label>
                        <textarea app-model="new.description" placeholder="Campaign Name" class="rounded"></textarea>
                    </div>

                </div>

                <div class="grid pb-1 gap-2 col-4" app-show="view.tab == 'two'">
                    <div class="colspan-4 rowspan-1">
                        <label class="block text-small">Subject</label>
                        <input type="text" app-model="new.subject" placeholder="Email subject" class="rounded">
                    </div>
                    <div class="colspan-3 rowspan-3">
                        <label class="block text-small">Content</label>
                        <div contenteditable="true" id="content" app-bind="new.content" class="bg-white p-1 rounded" style="white-space: pre-wrap"></div>
                    </div>
                    <div  class="colspan-1 rowspan-2">
                        <label>Add an image</label>
                        <img id="img" src="/images/products/Product_placeholder.svg" app-src="new.image" style="height: auto; width: 100%">

                        <div class="grid col-2 gap-1 mt-1">
                            <div id="btn-1">
                                <label for="img-1" class="btn outline clickable ">Upload Image</label>
                                <input type="file" id="img-1"  onchange="scope.addCampaignImage(this)">
                            </div>
                            <div class="text-right">
                                <button class="btn border" app-show="new.image" app-click="removeCampaignImage()">Remove Image<span class="icon close black right"></span></button>
                            </div>
                        </div>
                    </div>


                    <div class="colspan-1 rowspan-1">
                        <label class="block text-small">Add a button link</label>
                        <input type="text" app-model="new.button_text" placeholder="Button text" class="rounded mb-1">
                        <input type="text" app-model="new.button_url" placeholder="Button link (eg, https://...)" class="rounded">
                    </div>

                </div>

            </div>

            <div class="modal-appointment-actions flex flex-middle-right">
                <a class="btn border mr-4" app-click="sendTest(new,true)">Send Test<span class="icon confirm black right"></span></a>
                <a class="btn border" onclick="modalCloseAll()">
                    Cancel
                </a>
                <a class="btn bg-secondary" app-click="saveCampaign()">
                    <span app-show="new._key">Save Campaign</span>
                    <span app-hide="new._key">Add Campaign</span>
                    <span class="icon add white right"></span>
                </a>
            </div>

        </div>

    </div>
