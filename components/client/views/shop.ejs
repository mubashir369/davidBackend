<% layout('customer-page.ejs') -%>

<div class="my-4 pt-2 grid col-2" app-init="initCart()">
    <div class="flex flex-middle-left flex-column">
        <h1>Recommended Products</h1>
        <h4>Add products to collect during your next appointment</h4>
    </div>
    <div class="flex flex-middle-right">
        <a href="/shop/cart" class="text-secondary">View Cart (<span app-bind="cart.items_count"></span>)</a>
    </div>
</div>

<div class="grid col-4 col-m-3 col-s-1 my-2" app-init="initCart()">

    <% products.forEach((product,i)=>{ %>
        <a class="product text-center">
            <div class="image">
                <% if (typeof product.image == 'undefined' || product.image == ''){ %>
                    <img src="/images/products/Product_placeholder.svg">
                <% } else { %>
                    <img src="<%- product.image %>">
                <% } %>

                <div class="actions" app-click="addToClickCollect('<%- product._key %>')">

                    <div class="clickable" ><span class="icon checkout black left"></span>Add to Cart</div>

                </div>
            </div>
            <div class="details capitalise">
                <h4><%- product.name %></h4>
                <div><%- product.brand %></div>
                <div>Â£<%- product.price %></div>
            </div>
        </a>
    <% }) %>

</div>
