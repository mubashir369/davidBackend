.product {

    &-image {
        display:block;
        height: 100%;
        width: auto;
    }

    display: flex;
    flex-direction: column;

    .image {
        flex: 0 0 15rem;
        overflow: hidden;
        position: relative;

        img {
            width: 100%;
            height: 100%;
            object-fit: contain;
        }

        .actions {
            position: absolute;
            display: flex;
            flex-direction: row;
            align-items: center;
            justify-content: center;
            bottom: 0;
            left: 0;
            width: 100%;
            padding: 1rem;
            background-color: rgba(255,255,255,0.75);
            transition: all 0.3s ease;

            @media desktop {
                transform: translateY(3.5rem);
            }
        }

    }

    .details {
        background-color: #fff;
        padding: 0.5rem 1rem;
        flex: 1;
        font-size: 0.8rem;

        h2, h3, h4 {
            font-size: 0.9rem;
            font-weight: 600;
        }

    }

    &:hover {
        @media desktop {
            .actions {
                transform: translateY(0);
            }
        }
    }

}

.modal {
    .product {

        &-image {
            display:block;
            height: 10rem;
            width: auto;
            margin: auto;
        }

    }
}
