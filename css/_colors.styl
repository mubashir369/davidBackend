.text {

    &-white, &-white a, &-white a span {
        color: white;
    }

    &-black {
        color: #505050;
    }

    &-primary {
        color: $brand-primary !important;
    }

    &-primary-light {
        color: $brand-primary-light !important;
    }

    &-secondary {
        color: $brand-secondary !important;
    }

    &-light-grey {
        color: $bg-grey !important;
    }

    &-grey {
        color: $text-grey !important;
    }
    &-red {
        color: $brand-red !important;
    }
}

.bg {

    &-white {
        background-color: white;
    }

    &-primary {
        background-color: $brand-primary !important;
        color: white;
    }

    &-primary-light {
        background-color: $brand-primary-light !important;
    }

    &-grey {
        background-color: $bg-grey-2 !important;
    }

    &-secondary {
        background-color: $brand-secondary !important;
    }

    &-light-grey {
        background-color: $bg-light-grey !important;
    }

    &-error {
        background-color: $bg-error !important;
    }

    &-warn {
        background-color: $light_grey;
        color: $brand-black;
        i.fas {
            color: $bg-error
        }

    }

}
