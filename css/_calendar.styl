
div.calendar {

    height: calc(100vh - 3.75rem);
    overflow-x: auto;
    overflow-y: auto;
    padding: 0;


    @media small {
        width: auto;
        height: 100vh;
    }

    .day {

        min-width: 100vh;
        display: block;
        white-space: nowrap;

        .axis-y {
            // flex: 0 0 3.5rem;
            width: 3.5rem;
            position: relative;
            display: inline-block;
            vertical-align: top;
            height: $calendar-day-height;
            flex-direction: column;
            text-align: right;
            z-index: 3;

            .name {
                position: sticky;
                top:0;
                height: 4rem;
                z-index:300;
                background-color: white;
            }

            .hour {

                height: 80px;
                display: block;
                flex-direction: column;

                .slot {
                    position: relative;
                    height: 20px;
                    font-size: 0.9rem;
                    padding: 0 1em;

                    &.transparent {
                        opacity: 1;
                        color: #ccc;
                    }
                }

            }

            &.text-left {
                text-align: left;

                .hour {
                    .slot {
                        padding: 0 1.5em 0 0.5em
                    }
                }
            }

        }

        .axis-x {
            position: sticky;
            width: 100%;
            top: 0;
            left: 0;
            margin-left:-0.3rem;
            display: flex;
            height: 4rem;
            flex-direction: row;
            text-align: left;
            background-color: white;
            z-index: 50;

            .name {
                flex: 1;
                position: sticky;
                top:0;
                padding: 0.5rem 1rem 0.5rem 1rem;
                z-index:300;
                font-size: 0.85rem;
                // height: 4.24rem;
            }

            .hour {

                flex: 1;
                display: flex;
                flex-direction: column;

                .slot {
                    position: relative;
                    flex: 1;
                    font-size: 0.9rem;
                    padding: 0 1em;

                    &.transparent {
                        opacity: 0.5 !important;
                    }
                }

            }

        }
        .slots {

            flex: 1;
            position: relative;
            display: flex;
            height: auto;
            flex-direction: row;
            background-color: #e6e6e6;

        }
        .slots-wrap {

            flex: 1;
            width: auto;
            min-width: calc(100vw - 19rem);
            position: relative;
            display: inline-block;
            vertical-align: top;
            white-space: nowrap;
            height: $calendar-day-height;
            flex-direction: column;

            .slots > .staff, .axis-x > .staff {

                // flex: 1 0 13rem;
                width:100%;
                min-width: 13.75rem;
                display: inline-flex;
                position:relative;
                flex-direction: column;
                padding-right: 0.5rem;
                top: 0.7rem;

                @media small {
                    // flex: 1 0 60vw;
                }

                &.unavailable {
                    &::after {
                        display: block;
                        position: absolute;
                        content:'';
                        z-index: 500;
                        top: 0;
                        left: 0;
                        height: 100%;
                        width: 100%;
                        background-color: #f6f6f6;
                        opacity: 0.6;
                    }
                }

                &:last-child {
                    margin-right:0;
                }



                .hour {

                    height: 80px;

                    display: block;
                    flex-direction: column;

                    .slot {
                        // flex: 0 0 20px;
                        position: relative;
                        height: 20px;
                        -webkit-box-shadow: inset 0px 1px 0px 0px $bg-grey-2;
                        -moz-box-shadow: inset 0px 1px 0px 0px $bg-grey-2;
                        box-shadow: inset 0px 1px 0px 0px $bg-grey-2;
                        font-size: 0.7em;
                        padding: 0 1em;
                        color: $text-grey;

                        &:first-child {
                            -webkit-box-shadow: inset 0px 1px 0px 0px $bg-grey-1;
                            -moz-box-shadow: inset 0px 1px 0px 0px $bg-grey-1;
                            box-shadow: inset 0px 1px 0px 0px $bg-grey-1;
                        }

                        &:hover {
                            background-color: #fafafa;
                            cursor: pointer;
                        }

                        &.selected {

                        }

                    }

                }

            }

        }

        &.overview {

            .slots-wrap {

                min-width: calc(100vw - 12rem) !important;
                height: calc(100vh - 6rem);

                .slots > .staff, .axis-x > .staff {
                    min-width: 1rem;
                    .hour {
                        height: 40px;
                        .slot {
                            height: 10px;
                        }
                    }
                }

            }

            .axis-y {
                .hour {
                    height: 40px;
                    .slot {
                        height: 10px;
                    }
                }
            }

            .axis-x {
                .hour {
                    height: 40px;
                    .slot {
                        height: 10px;
                    }
                }
            }

        }

    }

}
