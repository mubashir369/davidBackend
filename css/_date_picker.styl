.datepicker {

    position: absolute;
    background-color: white;
    padding: 1.563rem;
    top: 3rem;
    z-index:999;
    -webkit-box-shadow: 0px 20px 15px 0px rgba(0,0,0,0.26);
    -moz-box-shadow: 0px 20px 15px 0px rgba(0,0,0,0.26);
    box-shadow: 0px 20px 15px 0px rgba(0,0,0,0.26);
    font-size: 0.938rem;
    color: $text-dark !important;

    @media small {
        width: 100%;
    }

    & > .grid {
        min-width: 30rem;

        @media small {
            min-width: auto
        }
    }

    .dates {
         min-width: calc(3em * 7);
         border-right: 1px solid #f2f2f2;

         @media small {
             min-width: auto;
             border: none;
             padding-bottom: 3rem;
         }
    }

    &.simple {
        top: 0;
    }

    .time-select {
        height: 20rem;
        overflow-y: scroll;
        text-align: right;
        border-left: 1px solid #f2f2f2;

        .clickable {
            padding: 0.5rem;
        }

        .start_time {
            background-color: #00D6C6;
            color: white;
            border-radius: 50%;
        }

        .end_time {
            background-color: #FF8C8D;
            color: white;
            border-radius: 50%;
        }
    }

    &.relative {
        top:0;
        z-index:1;
        position: relative !important;
        -webkit-box-shadow: none;
        -moz-box-shadow: none;
        box-shadow: none;
        min-width: auto;

        .dates {
            padding-right: 0rem;
        }
    }

    .btn-wrap {
        margin:0 0 0.75rem 0 !important;
        white-space: nowrap;
    }

    .buttons {
        padding-left: 1.563rem;

        @media small {
            padding:0;
            display: grid;
            grid-template-columns: 1fr 1fr 1fr;
            grid-column-gap: 1rem;

            .btn {
                width: 100%;
            }
        }
    }

    .cell {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 3em;
        width: 3em;
        cursor: pointer;
        margin: auto

        .today {
            background-color: rgba(216, 209, 218,0.2);
            border-radius: 50%;
        }

        .start_date {
            background-color: #00D6C6;
            color: white;
            border-radius: 50%;
        }

        .end_date {
            background-color: #FF8C8D;
            color: white;
            border-radius: 50%;
        }

        span {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%;
            height: 100%;
        }

        .pre,.post {
            opacity: 0.2;
        }

        .reg {
            &:hover, .selected {
                background-color: $brand-primary;
                color: white;
                border-radius: 50%;
            }
        }

        .selectable {
            font-weight: 600;
            background-color: $bg-grey-2;
            border-radius: 50%;
            &:hover, .selected {
                background-color: $brand-primary;
                color: white;
                border-radius: 50%;
            }
        }

        .passed {
            opacity: 0.6;
            font-weight: 300;
        }
    }

    // .day, .reg, .passed {
    //     font-weight: 500;
    // }

    .day {
        font-size: 0.875rem;
    }

}
