.content {

    &-centered {

        padding: 5.875rem 0;
        text-align: center;

        @media small {
            padding: 3.875rem 0;
        }

        h2 {
            font-size: 1.875rem;
        }

        h3 {
            font-size: 1.625rem;
        }

        p {
            line-height: 1.563rem;
            color: $text-grey;
            max-width: 75%;
            margin: 1.625rem auto 2.813rem auto;

            @media small {
                max-width: 100%;
            }
        }

        &.dark {
            background-color: rgba(182, 151, 91, 0.1);
        }

        &.black {
            background: $bg-dark-gradient;
            color: $text-light;

            p {
                color: $text-light;
            }

            .btn-outline {
                color: $text-light;
            }
        }

        .disclaimer {
            text-align: left;
            font-size: 0.75rem;
        }

    }

    &-two-col {

        padding: 5.875rem 0;
        text-align: left;

        &.black {
            background: $bg-dark-gradient;
            color: $text-light;
        }

        @media small {
            padding: 3.875rem 0;
        }

        h2 {
            font-size: 1.875rem;
        }

        h3 {
            font-size: 1.625rem;
        }

        p {
            line-height: 1.563rem;
            color: $text-grey;
            margin: 1.625rem auto 2.813rem auto;
        }

        &.dark {
            background-color: rgba(182, 151, 91, 0.1);
        }

    }

    &-testimonials {

        h2 {
            font-size: 1.875rem;
        }

        padding: 5.875rem 0;
        text-align: center;

        @media small {
            padding: 3.875rem 0;
        }

        .testimonial {

            width: 75%;
            margin: 0 auto 5rem auto;

            @media small {
                width: 100%;
            }

            .avatar {
                height: 6.563rem;
                width: 6.563rem;
                border-radius: 50%;
                margin: 3rem auto 2rem auto;
            }

            p {

                color: $text-darker-grey;
                font-style: italic;
                margin-bottom: 1rem;
                line-height: 1.875rem;

                &.customer {
                    font-style: normal;
                    color: $brand-light;
                    font-weight: 500;
                }
            }

        }

    }


    &-image {

        position: relative;
        background-position: center;
        background-size: cover;
        height: 31.25rem;
        color: $text-light;
        padding: 5.875rem 0;
        text-align: center;

        @media small {
            height: auto;
            min-height: 15rem;
        }

        .contain {

            &::after {

                position: absolute;
                top: 0;
                left: 0;
                content: '';
                width: 100%;
                height: 100%;
                background-color: rgba(0,0,0,0.65);

            }

        }

        h2 {
            font-size: 1.875rem;
        }

        p {
            font-size: 1.25rem;
            line-height: 1.563rem;
            max-width: 75%;
            margin: 1.625rem auto 2.813rem auto;
            @media small {
                max-width: 100%;
            }
        }
    }

    &-blog {

        .contain {
            max-width: 820px;
        }

        .grid {
            margin: 3rem 0;
        }

        img {
            width: 100%;
            height: auto;
        }

        article {
            text-align: left;
        }

        padding: 5.875rem 0;

        @media small {
            padding: 3.875rem 0;
        }

        h2 {
            font-size: 2.2rem;
        }

        p {
            font-size: 1rem;
            line-height: 1.4rem;
            margin: 1.625rem auto 2.813rem auto;
        }

        a.page-link {
            color: $text-dark;
            display: inline-block;
            margin: 0 0.5rem;

            &:hover {
                color: $brand-light;
            }

            @media small {
                font-size: 1.2rem;
            }
        }

        .details {

            text-align: left;

            h4 {
                font-size: 1.25rem;
                color: $text-dark-grey;
                margin-bottom 0.75rem;
            }

            p {
                font-size: 0.9rem;
                color: $text-dark;
                margin: 0 0 2rem 0;
            }

            a {
                display: block;
                color: $brand-light;
                margin-bottom 0.75rem;

                &:hover {
                    color: $text-dark
                }

            }
        }

        .featured {

            background-color: white;
            border-radius: $border-radius;
            overflow: hidden;
            margin-bottom: 1rem;
            height:410px;

            @media small {
                height:auto;
            }

            .content {
                height: auto;
                overflow: hidden;

                @media small {
                    height: auto;
                }

                img {
                    height:410px;
                    width: 50%;
                    object-fit: cover;
                    display: inline-block;
                    vertical-align: top;
                    padding-right: 1rem;

                    @media small {
                        height:200px;
                        width: 100%;
                        display: block;
                        padding-right: 0;
                    }

                    & + div {
                        display: inline-block;
                        width: 48%;
                        vertical-align: top;
                        padding: 1.5rem 1rem 1rem 1rem;

                        @media small {
                            width: 100%;
                            display: block;
                            padding: 2rem;
                        }

                        a {
                            color: $text-dark;
                            &:hover {
                                color: $brand-light
                            }
                        }

                        h2 {
                            font-size: 1.5rem;
                        }

                        p {
                            margin:0;

                            &.date {
                                font-style: italic;
                                color: $text-grey;
                            }

                            &.exerpt {
                                margin: 0.625rem 0;
                            }

                        }

                    }

                }

            }

        }

        .article-list {

            a {
                .content {
                    h2 {
                        font-size: 1rem;
                    }
                    color: $text-dark;
                    &:hover {
                        color: $brand-light
                    }
                }
            }


            .content {
                background: white;
                margin: 0;
                overflow: hidden;
                border-radius: $border-radius;

                & > div {
                    height: 17.25rem;
                }

                @media small {
                    margin: 0 0 2rem 0;
                    & > div {
                        height: auto;
                    }
                }

                img {
                    height:200px;
                    width: 100%;
                    object-fit: cover;
                    display: block;
                    vertical-align: top;
                }

                p {
                    margin:0;

                    &.date {
                        font-style: italic;
                        color: $text-grey;
                        margin: 0.625rem 0;
                        font-size: 0.813rem;
                    }

                    &.exerpt {
                        margin-top: 1rem;
                    }

                }

            }

        }

    }

    &-looks {

        .grid > div {
            transform: all 1s ease;
        }

        img {
            display:block;
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    }

    &-map {

        .mapouter{
            position:relative;
            text-align:right;
            height:31.25rem;
            width:100%;

            @media small {
                height: 15rem;
            }
        }
        .gmap_canvas {
            overflow:hidden;
            background:none !important;
            height:31.25rem;
            width:100%;

            iframe {
                width: 100%;
                height: 100%;
            }

            @media small {
                height: 15rem;
            }
        }

    }

    &-notification {
        padding: 2rem;

        @media small {
            .contain.thin {
                min-width: 100%;
            }
        }


        h4 {
            font-size: 1rem;
        }

        a:not(.btn) {
            color: $brand-light;

            &:hover {
                color: $text-grey
            }
        }
    }

}
