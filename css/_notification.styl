div.notification {
    position: absolute;
    justify-content: center;
    align-items: center;
    max-width: 100vw !important;
    color: #fff;
    top: 0;
    left: 0;
    width: 100%;
    min-height: 60px;
    background-color: #00d6c6;
    padding: 1rem 1.5rem;
    font-size: 1.25rem;
    font-weight: 500;
    z-index: 999;

    &.error {
        color: white;
        background-color: $bg-error
    }

    &.success {
        color: white;
        background-color: #00D6C6
    }

    &-counter {
        display: inline-flex;
        position: absolute;
        top: 0.3rem;
        left: 0.8rem;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        background-color: $brand-secondary;
        border: 1px solid $bg-light-grey;
        color: white;
        font-size: 1rem;
        width: 0.75rem;
        height: 0.75rem;
        line-height: 1.7em;
        z-index: 50;
    }

    &-bar {
        background-color: white;
        white-space: normal;
        position: fixed;
        flex-direction: column;
        top:0;
        right:0;
        width: 30em;
        height: 100vh;
        padding: 1.313rem;
        z-index: 500;
        -webkit-box-shadow: 0px 20px 15px 0px rgba(0,0,0,0.26);
        -moz-box-shadow: 0px 20px 15px 0px rgba(0,0,0,0.26);
        box-shadow: 0px 20px 15px 0px rgba(0,0,0,0.26);

        .notification-wrap {
            height: calc(100vh - 4rem);
            overflow-y: auto;

            .indicator {
                display: block;
                height: 1rem;
                width: 1rem;
                border-radius: 50%;

                &.cancelled {
                    background-color: $cancelled;
                }
                &.new {
                    background-color: $new;
                }
            }
        }

        & * {
            white-space: normal !important;
        }
    }
}

.msg {

    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    border-radius: 0.5rem;
    background-color: #f8f8f8;
    cursor: pointer;
    padding: 1rem 1rem 1rem 0;
    margin-bottom: 0.5rem;

    &.active {
        // transform: translateX(1rem);
        background-color: white;
        box-shadow: $shadow-medium;
    }

    .status-dot {
        display: block;
        height: 0.5rem;
        width: 0.5rem;
        border-radius: 50%;
    }

    .new .status-dot {
        background-color: $brand-secondary;
    }

    .claimed .status-dot {
        background-color: green;
    }
}

.msg-wrap {
    @media small {
        overflow-x: auto;
        white-space: nowrap;

        &::-webkit-scrollbar {
            display: none;
        }

        .msg {
            display: inline-flex;
            &.active {
                box-shadow: none;
            }
        }
    }
}
