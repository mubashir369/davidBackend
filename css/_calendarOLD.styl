
.calendar {

    .wrapper {
        display: inline-block;
        vertical-align: top;
        width: auto;
        height: auto;
    }

    .wrap-date-time {
        width: 4em;
        padding: 0.5em 0;
    }

    .date-time .name, .day .name {
        margin: 1.5em 0;
        height: 2.5em;
        font-size: 0.875em;
        position: fixed;
        z-index: 500;
    }

    .date-time .name {
        margin: 1.15em 0;
    }

    .wrap-day {
        position: relative;
        padding: 0.5rem;
        width: calc(100% - 5em);
        overflow-x: hidden;
        overflow-y: hidden;
    }

    .hour {
        position: relative;
        display: block;
        width: 100%;
        height: auto;
    }

    .hour .slot {
        display: flex;
        align-items: center;
        justify-content: flex-start;
        width: 100%;
        height: 1.2rem;
        overflow: hidden;


        &.now {
            color: red !important;
        }

    }

    .date-time {
        display: inline-block;
        vertical-align: top;
        width: 3.5em;
        height: auto;
        margin-right: 0.3em;
        text-align: right;
    }

    .date-time .hour {
        padding-bottom:1px;
        font-size: 0.8rem;
    }

    .date-time .hour .slot{
        display: flex;
        align-items: center;
        justify-content: flex-end;
        color: #ccc;
    }

    .date-time .hour .slot:first-child{
        color: #444;
    }

    .days {

        display: flex;
        flex-direction: row;
        position: relative;
        font-size: 1rem;
        overflow-y: hidden;

        .name {

        }

        .day {

            display: block;
            position: relative;
            min-width: 13rem;
            flex: 1;
            font-size:1rem;
            vertical-align: top;
            height: auto;
            margin-right:0.375em;

            @media small {
                min-width: 68vw;
            }

            &.unavailable {
                &::after {
                    display: block;
                    position: absolute;
                    content:'';
                    z-index: 500;
                    top: 0;
                    left: 0;
                    height: 100%;
                    width: 100%;
                    background-color: #f6f6f6;
                    opacity: 0.6;
                }
            }

            &:last-child {
                margin-right:0;
            }

            .hour {

                border-bottom: 1px solid rgba(0,0,0,0);

                .slot {
                    -webkit-box-shadow: inset 0px 1px 0px 0px rgba(0,0,0,0.1);
                    -moz-box-shadow: inset 0px 1px 0px 0px rgba(0,0,0,0.1);
                    box-shadow: inset 0px 1px 0px 0px rgba(0,0,0,0.1);
                    font-size: 0.7em;
                    padding: 0 1em;
                    color: $text-grey;

                    &:first-child {
                        -webkit-box-shadow: inset 0px 1px 0px 0px rgba(0,0,0,0.3);
                        -moz-box-shadow: inset 0px 1px 0px 0px rgba(0,0,0,0.3);
                        box-shadow: inset 0px 1px 0px 0px rgba(0,0,0,0.3);
                    }

                    &:hover {
                        background-color: rgba(255,255,255,0.5);
                        cursor: pointer;
                    }

                    &.selected {
                        box-shadow: $bg-primary !important
                    }

                }

            }

        }

    }

}
